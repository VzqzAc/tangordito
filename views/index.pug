extends layout

block content
  if error
    p #{error}
  else
    if user
      p Hello #{user.username}!
      if bmi
        p
          Your BMI according to the#{' '}
          a(href='https://en.wikipedia.org/wiki/Body_mass_index#Categories') standard
          = ' ' + bmi + ' '
          p It is in the #{categoryName} category
          p Fill the form to check your new BMI
  form(method="post")
    p
      label(for="weight") Your weight:
      input(type="text", name="weight")
    p
      label(for="height") Your height:
      input(type="text", name="height")
    p
      input(type="submit", value="Calculate")
